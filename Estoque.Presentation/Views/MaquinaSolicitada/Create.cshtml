@model Estoque.Presentation.Models.MaquinaSolicitada

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

@if (ViewBag.Erro != null)
{
    <h4>@ViewBag.Erro</h4>
}

<h4>Equipamento</h4>
<hr />
<form asp-action="Create" method="post">
    <div class=form-group>
        <label class="control-label">Nome do Equipamento</label>
        <input type="text" class=form-control name="nomeEquipamento" />
        <span class=text-danger></span>
    </div>
    <div class=form-group>
        <label asp-for="QtdSolicitada" class="control-label">Quantidade Solicitada</label>
        <input asp-for=QtdSolicitada type="number" class=form-control />
        <span asp-validation-for=QtdSolicitada class=text-danger></span>
    </div>
    <div class=form-group>
        <label class="control-label">Nome do Solicitante</label>
        <input type="text" class=form-control name="nomeSolicitante" />
        <span class=text-danger></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar Equipamento" class="btn btn-primary" asp-action=Create method=post />
    </div>
</form>

<div>
    <br />
    <input type="submit" value="Voltar Para a Lista" class="btn btn-dark" asp-action=Index />
    <br />
    <input type="submit" value="Voltar Para a Página Inicial" class="btn btn-light" asp-action=Index asp-controller=Home />
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
