@model IEnumerable<Estoque.Presentation.Models.Solicitante>

@{
    ViewData["Title"] = "Lista de Solicitantes";
}

@if(ViewBag.Erro != null)
{
    <h4>@ViewBag.Erro</h4>
}

<form>
    <h1>Lista de Solicitantes</h1>

    <p>
        <input type="submit" value="Cadastrar Novo" class="btn btn-success" asp-action="Create"/>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome do Solicitante</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>
                        <input type="submit" value="Editar Dados" class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"/> |
                        <input type="submit" value="Detalhes" class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id"/> |
                        <input type="submit" value="Deletar Dados" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"/>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>